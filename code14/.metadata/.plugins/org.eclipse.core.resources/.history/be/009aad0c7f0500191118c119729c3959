package application;

import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.BorderPane;
import javafx.stage.Stage;

public class Lesson42 extends Application {

	@Override
	public void start(Stage stage) throws Exception {
		// TODO Auto-generated method stub
		BorderPane pane1 = new BorderPane();
		pane1.setPadding(new Insets(40,40,40,40));
		pane1.setTop(new Button("top"));
		pane1.setLeft(new Button("left"));
		pane1.setCenter(new Button("center"));
		pane1.setRight(new Button("right"));
		pane1.setBottom(new Button("bottom"));
		Scene scene1 = new Scene(pane1,400,400);
		stage.setTitle("BorderPane");
		stage.setScene(scene1);
		stage.show();
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Application.launch(args);

	}

}
